<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/level_01_intro_02_sv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false" >

    <RelativeLayout
        android:id="@+id/awareness_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/level_01_intro_02_text_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/level_01_intro_02_text_01"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/level_01_intro_02_image"
            android:layout_width="wrap_content"
            android:layout_below="@+id/level_01_intro_02_text_01"
            android:contentDescription="@string/content_desc_click_addr_bar"
            android:src="@drawable/click_dialog_ios"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="350dp" />
    </RelativeLayout>

</ScrollView>