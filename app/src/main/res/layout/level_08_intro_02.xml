<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recognize_attack"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/level_08_new_attack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/level_08_warning"
            android:layout_toRightOf="@+id/level_08_warning"
            android:text="@string/new_attack"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/level_08_intro_02_text_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/level_08_warning"
            android:layout_below="@+id/level_08_warning"
            android:text="@string/level_08_intro_02_text_03"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/level_08_intro_02_text_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/level_08_intro_02_text_03"
            android:layout_below="@+id/level_08_intro_02_text_03"
            android:layout_marginTop="@dimen/margin_standard"
            android:text="@string/level_08_intro_02_text_04"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/example_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/level_08_intro_02_text_04"
            android:layout_below="@+id/level_08_intro_02_text_04"
            android:layout_marginTop="@dimen/margin_xxsmall"
            android:text="@string/url"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/level_08_warning"
            android:layout_width="@dimen/icon_medium"
            android:layout_height="@dimen/icon_medium"
            android:contentDescription="@string/content_desc_attention"
            android:padding="@dimen/mini_padding"
            android:src="@drawable/dialog_warning" />

        <TextView
            android:id="@+id/level_08_intro_02_text_05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/example_01"
            android:layout_marginTop="@dimen/margin_standard"
            android:text="@string/level_08_intro_02_text_05"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/example_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/level_08_intro_02_text_05"
            android:layout_below="@+id/level_08_intro_02_text_05"
            android:layout_marginTop="@dimen/margin_xxsmall"
            android:text="@string/url"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/level_08_intro_02_text_06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/example_02"
            android:layout_marginTop="@dimen/margin_standard"
            android:text="@string/level_08_intro_02_text_06"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/example_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/level_08_intro_02_text_06"
            android:layout_below="@+id/level_08_intro_02_text_06"
            android:layout_marginTop="@dimen/margin_xxsmall"
            android:text="@string/url"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/level_08_intro_02_text_07"
            android:id="@+id/more_examples"
            android:layout_below="@+id/example_03"
            android:layout_marginTop="@dimen/margin_small" />
    </RelativeLayout>

</ScrollView>