<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start_menu_sv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".StartMenuActivity" >

        <TextView
            android:id="@+id/start_menu_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/start_menu"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/menu_button_play"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_standard_height"
            android:layout_alignLeft="@+id/menu_button_level_overview"
            android:layout_below="@+id/start_menu_text"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/button_green"
            android:contentDescription="@string/content_desc_play"
            android:minWidth="@dimen/btn_standard_width"
            android:text="@string/button_play" />

        <Button
            android:id="@+id/menu_button_level_overview"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_standard_height"
            android:layout_below="@+id/menu_button_play"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/button_grey"
            android:contentDescription="@string/content_desc_level_overview"
            android:minWidth="@dimen/btn_standard_width"
            android:text="@string/button_level_overview" />

        <Button
            android:id="@+id/menu_button_social"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_standard_height"
            android:layout_below="@+id/menu_button_level_overview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/button_grey"
            android:contentDescription="@string/content_desc_google_play"
            android:minWidth="@dimen/btn_standard_width"
            android:text="@string/button_social" />

        <Button
            android:id="@+id/menu_button_more_info"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_standard_height"
            android:layout_alignLeft="@+id/menu_button_social"
            android:layout_below="@+id/menu_button_social"
            android:layout_marginTop="@dimen/margin_large"
            android:background="@drawable/button_grey"
            android:contentDescription="@string/content_desc_more_info"
            android:minWidth="@dimen/btn_standard_width"
            android:text="@string/button_more_info" />

        <Button
            android:id="@+id/menu_button_about"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_standard_height"
            android:layout_below="@+id/menu_button_more_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/button_grey"
            android:contentDescription="@string/content_desc_about"
            android:minWidth="@dimen/btn_standard_width"
            android:text="@string/button_about" />

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/menu_button_about"
            android:text="@string/number"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/grey"
             />
    </RelativeLayout>

</ScrollView>